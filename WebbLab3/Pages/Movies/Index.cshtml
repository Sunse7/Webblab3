@page
@model WebbLab3.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Index";
}
<head>
    <style>
        .sold-out-movie {
            color: #E5E4E7;
        }
    </style>
</head>

<h1>Movies</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Title)
            </th>
            <th> 
                <a asp-page="./Index" asp-route-sortorder="SeatsLeft">
                    @Html.DisplayNameFor(model => model.Movie[0].NumberOfSeats)
                </a>
            </th>
            <th> 
                <a asp-page="./Index" asp-route-sortorder="StartTime">
                    @Html.DisplayNameFor(model => model.Movie[0].MovieStartTime)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movie)
        {
            <tr class="@(@item.NumberOfSeats <= 0 ? "sold-out-movie": "")">
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfSeats)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MovieStartTime)
                </td>
                <td>
                    <a asp-page="./PurchaseTicket" asp-route-id="@item.ID">Purchase Tickets</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>