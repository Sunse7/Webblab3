@page
@model WebbLab3.Pages.Movies.PurchaseTicketModel

@{
    ViewData["Title"] = "PurchaseTicket";
}

<h1>Purchase Ticket</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.NumberOfSeats)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.NumberOfSeats)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.MovieStartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.MovieStartTime)
        </dd>
    </dl>
    <form method="post" asp-page-handler="PurchaseTicket" asp-route-id="@Model.Movie.ID">
        <div class="form-group col-md-4">
            <label asp-for="Movie.NumberOfSeats" class="control-label"></label>
            <input asp-for="TicketAmount" class="form-control" value="1"/>
            @if (Model.TicketAmount >= 12)
            {
                <p>Invalid number, max 12 tickets</p>
            }
            else if (Model.TicketAmount < 0)
            {
                <p>Invalid number, min 1 ticket</p>
            }
            <span asp-validation-for="Movie.NumberOfSeats" class="text-danger"></span>
        </div>
        <button>Purchase</button>
    </form>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
